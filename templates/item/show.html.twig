{% extends 'base.html.twig' %}

{% block title %}Item{% endblock %}

{% block body %}
    <div class="container-fluid mt-5">
        <div class="row">
            <h1>Detalles</h1>

            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ item.id }}</td>
                </tr>
                <tr>
                    <th>Región</th>
                    <td>{{ item.region }}</td>
                </tr>
                <tr>
                    <th>Descripción</th>
                    <td>{{ item.name }}</td>
                </tr>
                <tr>
                    <th>Total</th>
                    <td>{{ item.total }}</td>
                </tr>
                <tr>
                    <th>Tallas</th>
                    <td>{{ item.sizes|join(', ') }}</td>
                </tr>
                <tr>
                    <th>Asignado</th>
                    <td>
                        <a class="btn btn-link p-0" href="{{ path('app_loan_item', {item: item.id}) }}">{{ item.loans|length }} piezas</a>
                    </td>
                </tr>
                <tr>
                    <th>Actualizado</th>
                    <td>
                        {{ item.updatedAt ? item.updatedAt|date('d/m/Y H:i:s') : '' }}
                        ({{ item.updatedBy.name }})
                    </td>
                </tr>
                </tbody>
            </table>

            <div class="d-flex justify-content-between mt-4">
                <a class="btn btn-light" href="{{ path('app_item_index') }}">
                    <i class="fa-solid fa-arrow-left"></i> Volver
                </a>
                {% block form_buttons %}
                    {{ include('item/_delete_form.html.twig') }}
                {% endblock %}
                <a class="btn btn-warning" href="{{ path('app_item_edit', {'id': item.id}) }}">
                    <i class="fa-solid fa-pencil"></i> Editar
                </a>
            </div>
        </div>
    </div>
{% endblock %}
