{% set ADMIN = 'ROLE_ADMIN' %}

{% extends 'base.html.twig' %}

{% block title %}Usuarios{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <style>
        .fa-square-check {
            color: greenyellow;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <h1>Lista de usuarios</h1>

            <a type="button" class="btn btn-primary my-3" href="{{ path('app_user_new') }}">
                <i class="fa-regular fa-plus"></i> Nuevo Usuario
            </a>

            <table class="table table-dark table-striped table-hover js-datatable" id="userTable">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Tel√©fono</th>
                    <th class="text-center">Admin</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.name }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.phone }}</td>
                        <td class="text-center">{{ ADMIN in user.roles ? '<i class="fa-solid fa-square-check fa-2x"></i>' : '' }}</td>
                        <td>
                            <a class="float-end mx-1 btn btn-warning btn-sm"
                               href="{{ path('app_user_edit', {'id': user.id}) }}">
                                <i class="fa-solid fa-pencil"></i>
                            </a>
                            <a class="float-end mx-1 btn btn-info btn-sm"
                               href="{{ path('app_user_show', {'id': user.id}) }}">
                                <i class="fa-solid fa-circle-info"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
