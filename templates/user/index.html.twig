{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Users list</h1>

        <ul>
            {% for user in users %}
                <a href="{{ path('app_user_show', {id: user.id} ) }}">
                    <li>{{ user.name }} - {{ user.email }}</li>
                </a>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
