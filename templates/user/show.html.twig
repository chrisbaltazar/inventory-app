{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Usuario</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ user.phone }}</td>
            </tr>
            <tr>
                <th>Admin</th>
                <td>{{ 'ROLE_ADMIN' in user.roles ? 'SI' : 'NO' }}</td>
            </tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-between mt-4">
            <a class="btn btn-light" href="{{ path('app_user_index') }}">
                <i class="fa-solid fa-arrow-left"></i> Volver
            </a>
            {% block form_buttons %}
                {{ include('user/_delete_form.html.twig') }}
            {% endblock %}
            <a class="btn btn-warning" href="{{ path('app_user_edit', {'id': user.id}) }}">
                <i class="fa-solid fa-pencil"></i> Editar
            </a>
        </div>
    </div>
{% endblock %}
