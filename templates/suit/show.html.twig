{% extends 'base.html.twig' %}

{% block title %}Traje {{ suit.name }}{% endblock %}

{% block body %}
    <div class="row mb-3">
        <h1>TRAJE: {{ suit.region }} - {{ suit.name }} ({{ suit.genderName }})</h1>
    </div>
    <div class="row">
        <div class="col-sm-12 col-md-6">
            {% if suit.picture %}
                <div class="suit-picture-container w-auto text-center rounded shadow">
                    <img src="{{ asset(suit.picture) }}" alt="{{ suit.name }}" class="img-fluid mb-3"/>
                </div>
            {% endif %}
        </div>
        <div class="col-sm-12 col-md-6">
            <div class="card text-bg-dark mb-4 shadow rounded">
                <div class="card-header">Piezas de vestuario</div>
                <div class="card-body px-1">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <tbody>
                            {% for item in suit.items %}
                                <tr>
                                    <td>{{ item.name }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>


    <div class="d-flex justify-content-between mt-4">
        <a class="btn btn-light" href="{{ path('app_suit_index') }}">
            <i class="fa-solid fa-arrow-left"></i> Volver
        </a>
    </div>
{% endblock %}
