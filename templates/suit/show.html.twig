{% extends 'base.html.twig' %}

{% block title %}Traje {{ suit.name }}{% endblock %}

{% block body %}
    <div class="row w-auto px-2">
        <div class="card text-bg-dark rounded shadow">
            <div class="row">
                <div class="col-12 col-md-{{ suit.picture ? '6' : '12' }}">
                    {% if suit.picture %}
                        <img src="{{ asset(suit.picture) }}" class="card-img-top" alt="{{ suit.name }}">
                    {% endif %}
                    <div class="card-body text-center">
                        <h5 class="card-title">{{ suit.region }} - {{ suit.name }} ({{ suit.genderName }})</h5>
                        <p class="card-text fst-italic fw-lighter">{{ suit.description }}</p>
                    </div>
                </div>
                <div class="col mt-3">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <tbody>
                            {% for item in suit.items %}
                                <tr>
                                    <td>{{ item.name }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% if suit.note %}
                        <div class="alert alert-primary text-center" role="alert">
                            Nota: {{ suit.note }}
                        </div>
                    {% endif %}
                </div>
            </div>
            <div class="card-body">
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <a class="btn btn-light" href="{{ path('app_suit_index') }}">
            <i class="fa-solid fa-arrow-left"></i> Volver
        </a>
    </div>

{% endblock %}
