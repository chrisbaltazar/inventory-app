{% extends 'base.html.twig' %}

{% block title %}Son de México - Login{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-sm-10 offset-sm-1 col-md-6 offset-md-3">
            {% if error %}
                <div class="alert alert-danger" role="alert">{{ error.message }}</div>
            {% endif %}
            <form method="POST" action="{{ path('app_login') }}">
                <h1 class="h3 mb-3 fw-normal text-center">Login</h1>
                <img class="mb-4 w-100" src="{{ asset('img/logo.PNG') }}" alt="">

                <div class="form-floating">
                    <input type="email" class="form-control" id="username" name="_username"
                           placeholder="name@example.com" required autofocus>
                    <label for="floatingInput">Email</label>
                </div>
                <div class="form-floating">
                    <input type="password" class="form-control" id="password" name="_password" placeholder="Password"
                           required>
                    <label for="floatingPassword">Password</label>
                </div>
                <button class="mt-3 w-100 btn btn-lg btn-primary" type="submit">Entrar</button>
                <a href="{{ path('app_login_recover') }}" class="mt-3 w-100 btn btn-link">Recuperar password</a>
            </form>
        </div>
    </div>
    <hr class="my-4">
    <div class="row">
        <div class="col-sm-4 offset-sm-4 text-center sso-google-wrapper">
            <a class="btn btn-dark rounded-5 py-2 px-3" href="{{ googleAuthUrl }}">
                <img src="{{ asset('img/google-logo.jpg') }}" class="sso-google-img img-fluid rounded-circle"
                     alt="Google"
                     height="40"/>
                <span class="ms-2">Login con Google</span>
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4 offset-sm-4 text-center copyright-wrapper">
            <p class="mt-5 mb-3 text-muted">© 2025–{{ now|date('Y') }}</p>
        </div>
    </div>

{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <style>
        .sso-google-wrapper img {
            width: 30px;
        }
    </style>
{% endblock %}