{% extends 'partials/_modal.html.twig' %}

{% block modalTitle %}Entrega de vestuario{% endblock %}

{% block modalBody %}

    {% set formClass = form.vars.submitted ? 'was-validated' : 'needs-validation' %}
    <div class="form-wrapper mt-4">
        {{ form_start(form, {'attr': {'class': formClass}}) }}
        {{ form_errors(form) }}

        <input type="hidden" name="id" id="txtLoanId">
        {% include 'partials/_form-field.html.twig' with {'field': form.endDate, 'label': 'Fecha'} %}
        {% include 'partials/_form-field.html.twig' with {'field': form.status, 'label': 'Cierre'} %}
        {% include 'partials/_form-field.html.twig' with {'field': form.comments, 'label': 'Comentarios'} %}

        {{ form_rest(form) }}

        <button type="submit" class="btn btn-warning">
            <i class="fa-solid fa-clipboard"></i> Entregar
        </button>
    </div>

{% endblock %}

